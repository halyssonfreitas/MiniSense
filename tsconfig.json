{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "node"
        ],
        //"esModuleInterop": true, // fez com que os '* as' n√£o funcionassem
        //"forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "**/*.ts",
        "*.ts",
    ],
    "exclude": [
        "node_modules"
    ],
    "buildOnSave": true,
    "compileOnSave": true,
}